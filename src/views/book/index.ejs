<%- include('../base/header', {title: title}) %>

<div class="my_row">
    <h1><%= title %></h1>
    <form action="/api/books/create/" method="GET" class="d-inline">
        <button class="btn btn-sm btn-info">
            <i class="fa fa-plus" aria-hidden="true"></i>
        </button>
    </form>
</div>

<% if(books.length) { %>

<table class="table table-striped table-sm  mt-3">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col"><%= title %></th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>

        <% books.map((book, idx) => {  %>

            <tr>
                <th scope="row"><%= idx + 1 %></th>
                <td><%= book.title %></td>
                <td class="text-right">
                    <a class="btn btn-sm btn-success" href="/api/books/<%= book.id %>">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-primary" href="/api/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </td>
            </tr>

        <% }) %>

    </tbody>
</table>

<% } else { %>   
    <h3 class="mt-5">Пока нет ни одной книги</h3>
<% } %>

<%- include('../base/footer') %>