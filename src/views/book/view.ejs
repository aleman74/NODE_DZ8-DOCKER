<%- include('../base/header', {title: title}) %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/api/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %></p>

                <p class="card-text"><%= book.authors %></p>
                <p class="card-text"><%= book.favorite %></p>
                <p class="card-text"><%= book.fileCover %></p>
                <p class="card-text"><%= book.fileName %></p>
                <p class="card-text"><%= book.fileBook %></p>

                <p class="card-text">&nbsp;</p>
                <p class="card-text views"><%= view_count %> просмотров</p>

            </div>
        </div>
    </div>
</div>

<%- include('../base/footer') %>